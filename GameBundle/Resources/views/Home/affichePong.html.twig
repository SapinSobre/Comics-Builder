{% extends('GameBundle::layout.html.twig') %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/game/css/affichePong.css') }}" rel="stylesheet"/>
{% endblock %}
{% block bouton %}
    <div class="bouton" style="margin-top:10px;width:50px;height:50px;border-radius:25px;background-color:darkgrey;"><a class="col-md-12 col-md-offset-1" style="right:11%;top:22%;background-color:transparent;border:none;" href="{{ path('game_homepage') }}" class="btn btn-default"><i style="color:ivory;" class="fa fa-paper-plane fa-2x"></i></a></div> 
{% endblock %}
{% block section %}       
    <section class="col-md-8">
        <h1 style="font-size:2.2em;color:darkgrey;font-weight:bold;margin-bottom:0px; margin-top:0;">STORYING-PONG</h1>
        <div class="row">
            {% for partie in parties %} 
                {% if partie.game.name == "Storying-pong" %}
                    <div class="col-sm-6 col-md-4">
                        <div class="thumbnail">
                            <h5>{{ partie.titre }}</h5>
                            {% for user in partie.users %}
                                <h6>par {{ user.username }}</h6>
                            {% endfor %}
                            <div class="row" style="text-align:center;margin-bottom:20px;">
                                <a href="{{ path('game_affiche_answer_storying_pong', {'partieId': partie.id}) }}" class="label label-default" rel="tooltip" title="Zoom" style="background-color:#6baba1;"><i style="color:ivory;" class="fa fa-search fa-1x"></i></a>
                                <a href="{{ path('game_new_answer', {'partieId': partie.id}) }}" class="label label-default" rel="tooltip" title="Zoom" style="background-color:#6baba1;"><i style="color:ivory;" class="fa fa-paint-brush fa-1x"></i></a>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </section>
{% endblock %}