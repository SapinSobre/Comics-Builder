{% extends('::base.html.twig') %}


{% block main %}

    <div class="col-md-4">
         {% block section %}
         {% endblock %}
    </div>

    <div class="col-md-8" style="padding-left:5%;">
            <h2 style="margin-top:0;padding-top:10px;text-transform:uppercase;color:darkgrey;">Les dessins du mois</h2>
            {% if concours is not empty %}
                <div class="row" style="margin-top:-20px;">
                    {%  for participation in concours %}
                        <div class="col-md-6">
                            <h3 style="text-align:center;margin-top:50px;font-weight:bold;">{{ participation.title }}</h3>
                            <h4 style="text-align:center;">par <strong>{{ participation.user.username }}</strong></h4>
                            <h5 style="text-align:center;margin-top:0;margin-bottom:20px;">le {{ participation.createdAt|date('d/m/Y') }}</h5>
                            <img src="../../../../web/uploads/pictures/{{ participation.imageAll.url }}" style="width:90%;margin-left:5%;margin-top:0px;margin-bottom:20px;" alt="{{ participation.imageAll.alt }}"/>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
    </div>

{% endblock %}

