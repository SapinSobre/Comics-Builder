{% extends('::base.html.twig') %}

    {% block main %}
        <div class="col-md-1" style="margin-left:-6%;">
                <div class="bouton" style="width:50px;height:50px;border-radius:25px;background-color:darkgrey;"><a class="col-md-12 col-md-offset-1" style="right:13%;top:20%;background-color:transparent;border:none;" href="{{ path('core_homepage') }}" class="btn btn-default"><i style="color:ivory;" class="fa fa-home fa-2x"></i></a></div>
                <div class="bouton" style="margin-top:10px;width:50px;height:50px;border-radius:25px;background-color:darkgrey;"><a class="col-md-12 col-md-offset-1" style="right:11%;top:22%;background-color:transparent;border:none;" href="{{ path('forum_homepage') }}" class="btn btn-default"><i style="color:ivory;" class="fa fa-smile-o fa-2x"></i></a></div> 
                <div class="bouton" style="margin-top:10px;width:50px;height:50px;border-radius:25px;background-color:darkgrey;"><a class="col-md-12 col-md-offset-1" style="right:17%;top:21%;background-color:transparent;border:none;" href="{{ path('game_homepage') }}" class="btn btn-default"><i style="color:ivory;" class="fa fa-paper-plane fa-2x"></i></a></div>
                {% block bouton %}
                {% endblock %}
        </div>
        <div class="col-md-8">
            {% block section %}

            {% endblock %}
        </div>
        <aside class="col-md-3">
            <div class="row">
                <h4 style="margin-bottom:20px;margin-top:0;">MES AMIS</h4>
            </div>
            <div class="row">
                {% if app.user.friends is not empty %}
                        {% for friend in app.user.friends %}
                        <div class="col-sm-12 col-md-12">
                            <div class="thumbnail" style="width:105%;background-color:#f5f5f5;">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="thumbnail" style="margin-top:20px;margin-left:10px;">
                                            <img style="width:70%;margin-top:5px;" src="../../../../web/uploads/user/images/{{ friend.imageUser.url }}" alt="{{ friend.imageUser.alt }}"/>
                                            <h5 style="margin-bottom:10px;text-align:center;color:rebeccapurple">{{ friend.username }}</h5>

                                        </div>
                                    </div>
                                    <div class="col-md-8 thumbnail" style="background-color:transparent;border:none;margin-bottom:0;margin-top:10px;">
                                        <p style="text-align:left;"><i style="color:dodgerblue;margin-right:5%;" class="fa fa-eye fa-1x"></i><a href="#" style="color:dodgerblue;"> Visiter la galerie</a></p>
                                        <p style="text-align:left;"><i style="color:palevioletred;margin-right:5%;" class="fa fa-paper-plane fa-1x"></i><a href="#" style="color:palevioletred;"> Proposer une partie</a></p>
                                        <p style="text-align:left;"><i style="color:darkblue;margin-right:5%;" class="fa fa-envelope-o fa-1x"></i><a href="#" style="color:darkblue"> Envoyer un message</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
            <div class="row">
                <h4 style="margin-bottom:20px;margin-top:0;">LES STORY BUILDERS</h4>
            </div>
            <div class="row">
                {% for user in users %}
                    <div class="col-md-4">
                        <img  id="avatar" style="width:120%;" src="../../../../web/uploads/user/images/{{ user.imageUser.url }}" alt="{{ user.imageUser.alt }}"/>
                         <p id="loginUser">{{ user.username }}</p>    
                    </div>
                {% endfor %}
            </div>
        </aside>
    {% endblock %}
    
   
